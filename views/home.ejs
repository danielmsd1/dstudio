		<button class="about-btn home-cvr-btn btn btn-secondary">Our Team</button>

	</section>


	<section id="portfolio-cvr">
		<h2 class="about-txt-hr">Portfolio</h2>
		<div class="container-fluid">
			<div class="row">

				<!-- start of a single project -->
				<div class="portfolio-col col-lg-4 col-md-6 col-sm-12">
					<div class="card">
						<div class="card-body">
							<div class="portfolio-ctr">
								<img src="https://images.unsplash.com/photo-1657480194308-7752db5e21f0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60"
									alt="PortfolioAvatar" class="portfolio-img">
								<div class="portfolio-overlay">
									<div class="text">
										Farmers Software Society <br>
										<a href="">
											<button class="home-cvr-btn btn btn-secondary">View</button>
										</a>
									</div>
								</div>
							</div>
						</div>
						<div class="portfolio-card-footer">
							<div class="container">
								<div class="row">
									<div class="col">
										<a href="">
											<i class="portfolio-fa-solid fa-solid fa-comment fa-2x"></i>
										</a>
									</div>
								</div>
							</div>
						</div>

					</div>
				</div>


				<!-- end of a single project -->

				<div>
					<form action="/allprojects" method="post">
						<button class="btn home-cvr-btn btn-secondary" type="submit">View All Projects [20]</button>
					</form>
				</div>
			</div>

		</div>
	</section>

	<section id="quotation-cvr">
		<h2 class="about-txt-hr">Contact Us</h2>

		<form class="quotation-form" action="" method="post">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-6">
						<label for="name"></label>
						<input class="form-control" type="text" name="name" id="" placeholder="Your Name*" required>
					</div>
					<div class="col-lg-6">
						<label for="emailAddress"></label>
						<input class="form-control" type="email" name="emailAddress" id="" placeholder="Email Address*"
							required>
					</div>
					<div class="col-lg-12">
						<div class="input-group">
							<select class=" form-control" id="inputGroupSelect04">
								<!-- <option selected>How can we help? <i class="fa-solid fa-circle-chevron-down"></i> -->
								<!-- </option> -->
								<option value="1">Graphic Design</option>
								<option value="2">Motion Graphics</option>
								<option value="3">Training</option>
								<option value="3">Other</option>
							</select>
						</div>
					</div>

					<div class="col-lg-12">
						<label for="detail"></label>
						<textarea class="form-control" name="detail" id="" cols="30" rows="10"
							placeholder="Additional detail, website, etc" required></textarea>


						<button type="submit" class="contact-btn home-cvr-btn btn btn-secondary">Contact Us</button>
					</div>

				</div>
			</div>
		</form>

	</section>


	<%- include('partials/footer') -%>